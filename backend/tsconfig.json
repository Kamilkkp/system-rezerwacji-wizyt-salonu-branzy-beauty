{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@app/*": ["./src/app/*"],
      "@errors/*": ["./src/errors/*"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@api/*": ["./src/api/*"],
      "@core/*": ["./src/core/*"],
      "@tools/*": ["src/libs/tools/*"],
      "@tests/*": ["./src/tests/*"],
      "@root/*": ["./src/*"],
      "@libs/*": ["src/libs/*"],
    }
  }
}
